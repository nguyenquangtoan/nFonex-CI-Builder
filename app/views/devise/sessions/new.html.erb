        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
 		<div id="wrapper">
    	<div id="SignIn">
        	<div id="SignIn_top">
            </div>
            <div id="SignIn_middle">
            	<div id="tr_space">
                </div>
       	  <div id="SignIn_middle_tr">
                	<div id="SignIn_middle_tr_Name">
                    	<%= f.label :email %><br />
                    </div>
                    <div id="SignIn_middle_tr_txt">
                    	<%= f.email_field :email ,:size=>'50' %>
                    </div>
                </div><!-- tr -->
                
                <div id="SignIn_middle_tr">
                	<div id="SignIn_middle_tr_Name">
                    	<%= f.label :password %><br />
                    </div>
                    <div id="SignIn_middle_tr_txt">
                    	<%= f.password_field :password ,:size=>'50'%>
                    </div>
                </div><!-- tr -->
                
                <div id="SignIn_middle_tr">
                	<div id="SignIn_middle_tr_chk">
                    	<% if devise_mapping.rememberable? -%>
                            	<%= f.check_box :remember_me %> <%= f.label :remember_me %>
                            	<% end -%>
                    </div>
                </div><!-- tr -->
                
                <div id="SignIn_middle_tr">
                	<div id="SignIn_middle_tr_chk"> 
                	
                	<div><%= f.submit "Submit", :type => :image, :src=> '/images/btn_Login.png?1316578528' %></div>
                       
                    </div>
                </div><!-- tr -->
                
            <div id="SignIn_middle_tr">
                	<div id="SignIn_middle_tr_forgot">
                	<%= render :partial => "devise/shared/links" %>
                </div><!-- tr -->
               
            </div><!-- middle -->
            
            <div id="SignIn_bottom">
            </div>
            
        </div><!-- Sign In -->
    
    </div><!-- End wrapper -->
    <% end %>